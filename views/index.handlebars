<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img src="https://media.istockphoto.com/vectors/food-truck-vector-id847893726?k=6&m=847893726&s=612x612&w=0&h=keVpqnd-FtFNMylNTwzujgmbxnR63DQ7hUXa7Wfe4tw=" alt="Food truck">
            <br> <br> <br>
			<h2> Eat-Dat-Food! </h2>
             <br> <br>
		</div>
		<div class="col-md-6 text-center" class="task">
			<div class="row">
			  {{#each food_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-9 text-center">
					<pre>{{this.id}}. {{this.food_name}}
					</pre>
				</div>
				<div class="col-md-3 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="food_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
			  {{#each food_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.food_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/food/create" method="POST">
				<input type="text" class="form-control" name="food_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter the food you want to eat and click "Submit".</p>
		</div>
	</div>
</div>
